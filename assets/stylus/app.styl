html
  font-size 625%
  text-size-adjust 100%
  // word-spacing 1px
  -ms-text-size-adjust 100%
  -webkit-text-size-adjust 100%
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing: antialiased
  box-sizing border-box
  touch-action none
body
  // font-family "Quicksand", "Source Sans Pro", PingFangSC-Semibold -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif
  font-family PingFang-SC-Medium
  font-size 14px
  font-size 0.14rem
  color #333333
  overflow-x hidden
  word-wrap break-word
  text-justify auto
  -moz-hyphens: auto;
  -ms-hyphens: auto;
  -webkit-hyphens: auto;
  -o-hyphens: auto;
  hyphens: auto;
  // user-select none
  
body::-webkit-scrollbar
	width:0;
	height:0;

// 清除默认样式
html,body,ul,li,p,img,h1,h2,h3,h4,h5,h6
  list-style none
  padding 0
  margin 0

// *, *:before, *:after
//   box-sizing border-box
//   margin 0

b,i,a
  font-weight normal
  font-style normal
  text-decoration none
  color #333

label
  font-weight 400
  margin 0
  padding 0
input
  -webkit-appearance none
  border-radius 0
  background none
  outline none
  border 0

// 模块宽度布局
.module_container
  width 100%
  max-width 1200px
  // padding 0 15px
  margin: 0 auto
.module_nav_foote
  width 100%
  max-width 1600px

.iconfont
  width: 1em; height: 1em;
  vertical-align: -0.15em;
  fill: currentColor;
  overflow: hidden;




